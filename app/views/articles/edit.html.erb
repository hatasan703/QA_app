
  <div class="container">
  <div class="create_qa">
    <h2 class="qandaTtl">
        <span class="shitumon">お知らせ編集</span>
    </h2>

    <div class="QA">
<%= form_for(@article) do |f| %>

      <p>
        <%= f.label :title, "タイトル", class: 'inputMy' %><br>
        <%= f.text_field :title , class: 'answerFirst', required: true %><br>
      </p>
      <p>
        <%= f.label :text, "本文", class: 'inputMy' %><br>
        <%= f.text_area :text, class: 'answerSecond', required: true %><br>
      </p>

      <div class="btn-wrapper">
        <%= f.submit "編集を完了する", class: 'qa_submit_btn' %>
      </div>
<% end %>


    </div>
     </div>
  </div>
