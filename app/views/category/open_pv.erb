<div class="container">
  <section><div class="search_content">
    <div class='search_result arrowTtl2'><%= @category.name %></div>
    </div>
  </section>
</div>

<div class='container qa_status_content'>
  <div class='left_content'>
    <div class='status_btn'><%= link_to "解決済み",  category_path(@category) %></div>
    <div class='status_btn status_open'>回答受付中</div>
  </div>
      <div class='right_content'>
        <div class="dropdown2">
            <input id="tg2" class="dropInput2" type="checkbox">
            <label for="tg2" class="dropLabel2">
                <span class="userName">閲覧数</span>
            </label>
            <ul class="menu2 animation2">
              <li class='item2 top_item'><%= link_to "最新", category_open_category_path(@category) %></li>
              <li class='item2'><%= link_to "回答数", open_answer_count_category_path(@category) %></li>
              <li class='item2'><%= link_to "ポイント数", open_pv_category_path(@category) %></li>
            </ul>
        </div>
      </div>
</div>

<div class='container'>
    <% @questions.each do |question| %>
      <div class="qandaWrap">
          <div class="qandaItem">
              <article>
                  <div class="qandaItemStatus">
                       <% if question.done.present? %>
                        <a href="#" class="answer">解決済み</a>
                       <% else %>
                        <a href="#" class="question">回答受付中</a>
                       <% end %>
                      <%= link_to "#{@category.name}", "/questions/category/#{question.category_id}", class: "qandaItemStatusCat", method: :get %>
                  </div>
                  <section><h3> <%= link_to "#{question.title}", "/questions/#{question.id}", method: :get %></h3></section>
                  <p>
                      <%= link_to "#{question.text}", "/questions/#{question.id}", method: :get %>
                  </p>
                  <div class="qandaItemFooter">
                      <time><%= question.created_at %></time>
                      <a href="#"><%= question.answers.count %></a>
                      <a href="#"><%= question.impressions_count %></a>
                  </div>
              </article>
          </div>
      </div>
    <% end %>
</div>

