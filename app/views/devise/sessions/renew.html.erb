



        <div class="loginnav">

            <div class="loginlogo"><%= image_tag("h_logo.jpg", alt: "QOTAELU") %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="loginnav2">

                    <p class="loginnav3"><%= f.label :メールアドレス %></p>
                    <p class='wakusen'><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %></p>

                    <p class="loginnav4"><%= f.label :パスワード %><br /></p>
                    <p class='wakusen'><%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード' %></p>

                     <% if devise_mapping.rememberable? %>
                      <div class='user_option_save'>
                        <%= f.check_box :remember_me %>
                        <%= f.label :ユーザー情報を保存する %>
                      </div>
                     <% end %>
                     <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "パスワードをお忘れの場合", new_password_path(resource_name), class: 'user_option_pass' %><br />
                     <% end %>

                     <%= f.submit "ログインする", class: 'loginBtn' %>
                     <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <div class='loginBtn'><%= link_to "新規登録", new_registration_path(resource_name) %></div><br />
                     <% end %>
                </div>
              <% end %>

                <hr  class="noshade1" noshade>
                <p class="snslogin">SNSでログイン</p>
                <%= link_to "Facebookでログイン", "/users/auth/facebook", class: 'loginBtnFb' %>
                <%= link_to "Twitterでログイン", "/users/auth/twitter" , class: 'loginBtnTw' %>
            </div>
        </div>
