

<%= form_with(model: @question, local: true, url: {action: 'confirm'}) do |f| %>
  <div class="container create_qa">
    <h2 class="qandaTtl">
        <%= image_tag("qanda_q.png", alt: "Q") %>
        <%= image_tag("qanda_a.png", alt: "A") %>
        <span class="shitumon">質問投稿</span>
    </h2>

    <div class="QA">
      <p>
        <%= f.label :title, "タイトル(25文字以内)", class: 'inputMy' %><br>
        <%= f.text_field :title , class: 'answerFirst', required: true, maxlength: '25', value: @title %><br>
      </p>
      <p>
        <%= f.label :text, "本文(2000字以内)", class: 'inputMy' %><br>
        <%= f.text_area :text, class: 'answerSecond', required: true, maxlength: '2000', value: @text %><br>
      </p>
      <p>
        <%= f.label :category_id, "カテゴリ", class: 'inputMy' %><br>
        <%= f.collection_select :category_id, @categories, :id, :name, class: 'answerThird', selected: @category_id %>
      </p>

      <p>
        <%= f.label :お礼, class: 'inputMy' %><br>
        <%= f.select :point, [['50P', 50], ['100P', 100], ['300P', 300], ['500P', 500], ['1000P', 1000], ['2000P', 2000], ['3000P', 3000], ['5000P', 5000], ['10000', 10000], ['30000', 30000], ['50000', 50000], ['100000', 100000] ], class: 'answerThird', selected: @point %>
      </p>

      <div class="btn-wrapper">
        <%= f.submit "確認画面へ", class: 'qa_submit_btn' %>
      </div>

    </div>

  </div>
<% end %>
