<h1>質問投稿</h1>


<%= form_with(model: @question, local: true, url: {action: 'confirm'}) do |f| %>
  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :text, "本文" %><br>
    <%= f.text_area :text %><br>
  </p>
  <p>
    <%= f.label :"カテゴリ" %><br>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </p>
    <%= f.submit "投稿" %>
<% end %>
