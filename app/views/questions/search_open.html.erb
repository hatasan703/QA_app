<div class="container">
  <section><div class="search_content">
    <div class='search_result arrowTtl2'>検索結果<%= @search_open_questions.count %>件</div>
    </div>
  </section>
</div>

<div class='container qa_status_content'>
  <div class='left_content'>
        <div class='status_btn'><%= link_to "解決済み", questions_search_resolved_path('q[:title_cont]': params[:q][:title_cont]) %></div>
        <div class='status_btn status_open'>回答受付中</div>
      </div>
      <div class='right_content'>
        <div class="dropdown2">
            <input id="tg2" class="dropInput2" type="checkbox">
            <label for="tg2" class="dropLabel2">
                <span class="userName">最新</span>
            </label>
            <ul class="menu2 animation2">
              <li class='item2 top_item'>閲覧数</li>
              <li class='item2'>回答数</li>
              <li class='item2'>ポイント</li>
          </ul>
        </div>
      </div>
</div>


<div class='container'>
      <% @search_open_questions.each do |question| %>
        <div class="qandaWrap">
            <div class="qandaItem">
                <article>
                    <div class="qandaItemStatus">
                            <% if question.done.present? %>
                              <a href="#" class="answer">解決済み</a>
                            <% else %>
                              <a href="#" class="question">回答受付中</a>
                            <% end %>
                        <%= link_to "#{question.category.name}", "/questions/category/#{question.category_id}", class: "qandaItemStatusCat", method: :get %>
                    </div>
                    <section><h3> <%= link_to "#{question.title}", "/questions/#{question.id}", method: :get %></h3></section>
                    <p>
                        <%= question.text %>
                    </p>
                    <div class="qandaItemFooter">
                        <time><%= question.created_at %></time>
                        <a href="#"><%= question.answers.count %></a>
                        <a href="#"><%= question.impressionist_count %></a>
                    </div>
                </article>
            </div>
        </div>
      <% end %>
  </div>
</div>
