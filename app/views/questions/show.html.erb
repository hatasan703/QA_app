<h1>トップ▶︎<%= @question.category.name %></h1>
<div class='question_content'>
  <h2><%= @question.title %></h2>
  <p><%= @question.user.nickname %></p>
  <p><%= @question.user.created_at %></p>
  <p><%= @question.text %></p>
</div>

<% if user_signed_in? %>
  <% if @is_questioner && !@resolved %>

      <div class='answer_content'>
        <h3>回答一覧</h3>
        <% if @answers %>
          <% @answers.each do |answer| %>
            <p>
              <%= link_to answer.user.nickname, "/users/#{answer.user_id}" %>
              <%= answer.text %>
              <h3>
                <%= link_to "ベストアンサーに選ぶ", "#{@question.id}/answers/#{answer.id}/ba_confirm", class: '' %>
              </h3>
            </p>
          <% end %>
        <% end %>
       </div>

  <% else %>
    <% if @answerable && !@resolved %>

      <h3>回答済み </h3>
        <div class='answer_content'>
        <h3>回答一覧</h3>
              <% if @answers %>
                <% @answers.each do |answer| %>
                  <p>
                    <%= link_to answer.user.nickname, "/users/#{answer.user_id}" %>
                    <%= answer.text %>
                  </p>
                <% end %>
              <% end %>
        </div>

    <% elsif @resolved %>

      <h3>ベストアンサー</h3>
      <% if @best_answer %>
        <%= @best_answer.text %>
      <% end %>

      <div class='answer_content'>
      <h3>その他の回答</h3>
            <% if @answers %>
              <% @answers.each do |answer| %>
                <p>
                  <%= link_to answer.user.nickname, "/users/#{answer.user_id}" %>
                  <%= answer.text %>
                </p>
              <% end %>
            <% end %>
      </div>

    <% else %>

      <div class='answer_form'>
        <%= form_with(model: [@question, @answer], local: true, url: "#{@question.id}/confirm") do |f| %>
          <p>
          <%= f.label :text, "回答本文" %><br>
          <%= f.text_area :text %><br>
          </p>
          <%= f.submit "投稿" %>
        <% end %>
      </div>
    <% end %>

  <% end %>
<% else %>

  <% if @resolved %>

    <h3>ベストアンサー</h3>
    <% if @best_answer %>
      <%= @best_answer.text %>
    <% end %>

    <div class='answer_content'>
    <h3>その他の回答</h3>
          <% if @answers %>
            <% @answers.each do |answer| %>
              <p>
                <%= link_to answer.user.nickname, "/users/#{answer.user_id}" %>
                <%= answer.text %>
              </p>
            <% end %>
          <% end %>
    </div>

  <% else %>

    <h3><%= link_to "回答する", new_user_session_path %></h3>
    <div class='answer_content'>
    <h3>回答一覧</h3>
          <% if @answers %>
            <% @answers.each do |answer| %>
              <p>
                <%= link_to answer.user.nickname, "/users/#{answer.user_id}" %>
                <%= answer.text %>
              </p>
            <% end %>
          <% end %>
    </div>

  <% end %>
<% end %>
