<%# 解決済みページ %>
<div class=container>
  <section><h3 class="question_status">ベストアンサー</h3></section>
  <div class="qandaWrap">
      <div class="qandaItem">
          <article>
              <div class="qanda_middle_items answer_middle_items">
                  <div class='question_user'>
                    <%= image_tag  @best_answer.user.image, class: "question_user_image" %>
                    <%= link_to @best_answer.user.user_name, "/users/#{@best_answer.user_id}", class: "question_user_name" %>
                  </div>
                    <time><%= @best_answer.created_at %></time>
              </div>
              <p>
                <% if @best_answer %>
                  <%= simple_format(@best_answer.text) %>
                <% end %>
              </p>
          </article>
      </div>
    </div>
</div>

 <div class=container>
    <section><h3 class="question_status">ベストアンサー以外の回答</h3></section>
    <div class="qandaWrap">
      <% if @answers %>
        <% @answers.each do |answer| %>
          <div class="qandaItem">
            <article>
              <div class="qanda_middle_items answer_middle_items">
                <div class='question_user'>
                  <%= image_tag  answer.user.image, class: "question_user_image" %>
                  <%= link_to answer.user.user_name, "/users/#{answer.user_id}", class: "question_user_name" %>
                 </div>
                <time><%= answer.created_at %></time>
               </div>
              <p>
                <%= simple_format(answer.text) %>
              </p>
             </article>
           </div>
         <% end %>
       <% end %>
     </div>
    </div>
