        <div class="container">
            <div class="qanda">
                <section>
                    <h2 class="qandaTtl">
                        <span>みんなの</span>
                        <%= image_tag("qanda_q.png", alt: "Q") %>

                        <span>&amp;</span>
                        <%= image_tag("qanda_a.png", alt: "A") %>
                    </h2>
                </section>

                <section><h3 class="arrowTtl">ランキング</h3></section>
                <div class="qandaWrap">
                    <div class="qandaItem">
                        <article>
