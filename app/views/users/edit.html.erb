
  <div class="container mypage">
    <nav class="myprNav">
        <ul class="MyNavWrap">
            <li><%= link_to "プロフィール", "/users/#{@user.id}", class: '' %></li>
            <li><%= link_to "質問一覧", "/my_question/#{@user.id}", class: '' %></li>
            <li><%= link_to "回答一覧", "/my_answer/#{@user.id}", class: '' %></li>
        </ul>
    </nav>
  </div>

  <div class="container myprNav">
    <div class="edit-profile">
    プロフィール編集
    </div>
    <%= form_for(@user) do |f| %>
      <div class="user_profile_edit">
      <div class="user_error_message">
        <% if @user.errors.any? %>
            <p>ユーザー名を正しく入力してください</p>
        <% end %>
      </div>
        <div class="user_edit_content">
          <%= f.label :user_name, '※ユーザー名(半角英数字20文字以内)', class: "profile_edit_label" %>
          <%= f.text_field :user_name, class: 'user_edit_form edit_nickname' %>
        </div>

        <div class="user_edit_content">
          <%= f.label :sex, '性別(任意)', class:'profile_edit_label' %>
          <%= f.select :sex, [["",""], ["女性",true], ["男性",false]], {},   class: 'user_edit_form edit_sex' %>
        </div>

        <div class="user_edit_content">
          <%= f.label :age, '年齢(任意)', class:'profile_edit_label' %>
          <%= f.select :age, [["",""], ["10代",10], ["20代",20], ["30代",30], ["40代",40], ["50代",50], ["60代",60], ["70代以上",70] ], {},   class: 'user_edit_form edit_age' %>
        </div>

        <div class="user_edit_content">
          <%= f.label :role, '職業(任意)', class:'profile_edit_label' %>
          <%= f.select :role, [["",""], ["営業","営業"], ["事務・オフィスワーク","事務・オフィスワーク"], ["販売","販売"], ["飲食・フード","飲食・フード"], ["サービス・警備・清掃","サービス・警備・清掃"], ["イベント・レジャ・娯楽","イベント・レジャ・娯楽"], ["教育・カルチャー・スポーツ","教育・カルチャー・スポーツ"], ["美容","美容"],["医療・介護・福祉","医療・介護・福祉"],["ドライバー・配達","ドライバー・配達"],["製造・工場・倉庫","製造・工場・倉庫"],["IT・エンジニア","IT・エンジニア"],["編集・出版","編集・出版"],["専門職","専門職"],["土木・建設・農水産","土木・建設・農水産"],["その他","その他"] ], {},   class: 'user_edit_form edit_age' %>
        </div>

        <div class="user_edit_content">
          <%= f.label :bio, '自己紹介（255文字未満)(任意)' ,class: 'profile_edit_label' %>
          <%= f.text_area :bio, :maxlength => "255", :size => "80x5",  class: 'user_edit_form edit_bio'  %>
        </div>

        <div class="user_edit_content2">
          <%= f.submit '編集内容を保存', class: 'user_profile_edit_btn' %>
          <%= link_to 'キャンセル', user_path(@user), class: 'user_profile_edit_btn2' %>
        </div>


      </div>

    <% end %>
  </div>
