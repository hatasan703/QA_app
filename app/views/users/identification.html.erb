    <p>本人確認書類(表面)</p>
  </div>
  <div class="mainForm">
    <div class="inputFile">
      <div
        class="preview"
        style="background-image: url('../assets/img/verification.png')"
      >
        <input accept="image/*" id="id_file_front" name="id_file_front" type="file" />
      </div>
    </div>
  </div>
</div>

 <div class="label">
    <p>本人確認書類(裏面)</p>
  </div>
  <div class="mainForm">
    <div class="inputFile">
      <div
        class="preview"
        style="background-image: url('../assets/img/verification.png')"
      >
        <input accept="image/*" id="id_file_back" name="id_file_back" type="file" />
      </div>
    </div>
  </div>
</div>

<div class="verifie"><%= @verifie  %></div>



<div class="user_profile_edit_btn"><button class="" title="送信" type="submit">送信</button></div>

    <% end %>
</div>


