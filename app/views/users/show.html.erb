  <div class="container mypage">
            <nav class="myprNav">
                <ul class="MyNavWrap">
                    <li><%= link_to "プロフィール", "/users/#{@user.id}", class: 'show_profile' %></li>
                    <li><%= link_to "質問一覧", "/my_question/#{@user.id}", class: '' %></li>
                    <li><%= link_to "回答一覧", "/my_answer/#{@user.id}", class: '' %></li>
                </ul>
            </nav>
        </div>


        <div class="container">
            <div class="myprNav mypr">
                  <div class="edit_pro">
                      <div>ユーザー名　:</div>
                      <div class="centera"><%= @user.nickname %></div>
                  </div>
                  <div class="edit_pro">
                      <div>年齢　　　　:</div>
                      <div class="centera">
                        <% if @user.age.nil? %>
                          <p>未入力</p>
                        <% else %>
                          <%= @user.age %>
                        <% end %>
                      </div>

                  </div>
                  <div class="edit_pro">
                      <div>性別　　　　:</div>
                      <div class="centera"><% if @user_sex == true %>
                                    <p>女性</p>
                              <% elsif @user_sex.nil? %>
                                <p>未入力</p>
                                <% else%>
                                <p>男性</p>
                              <% end %></div>
                  </div>
                  <div class="edit_pro">
                  <div>職業　　　　:</div>
                  <div class="centera">
                    <% if @user.role.empty? %>
                        <p>未入力</p>
                    <% else %>
                        <%= @user.role %>
                    <% end %>
                  </div>
                  </div>
                  <% if @user.id == current_user.id %>
                    <div class='pro_edit_btn'>
                        <%= link_to "編集する", "/users/#{current_user.id}/edit", class: 'user_edit_btn' %>
                    </div>
                  <% end %>


                  <div class="box1212">
                  <div class="box12">
                       <span class="box-title">自己紹介</span>
                         <p class="profile">
                             <%= @user.bio %>
                         </p>
                     </div>
                  </div>
            </div>
        </div>
